    <script>
        document.getElementById('copy-email-btn').addEventListener('click', function() {
            const email = this.getAttribute('data-email');
            const buttonText = document.getElementById('button-text');
            const message = document.getElementById('copy-message');

            // Use document.execCommand('copy') for better compatibility in iframe environments
            const tempInput = document.createElement('input');
            tempInput.value = email;
            document.body.appendChild(tempInput);
            tempInput.select();

            try {
                document.execCommand('copy');
                // Update button text and show message
                buttonText.textContent = 'Email Copied!';
                message.textContent = 'Paste the email address into your message.';
                message.classList.remove('opacity-0');

                // Reset button after 3 seconds
                setTimeout(() => {
                    buttonText.textContent = 'Copy Email Address: keithbenas5@gmail.com';
                    message.classList.add('opacity-0');
                }, 3000);
            } catch (err) {
                console.error('Could not copy text: ', err);
                buttonText.textContent = 'Error Copying';
                message.textContent = 'Please manually copy: ' + email;
                message.classList.remove('opacity-0');
            } finally {
                document.body.removeChild(tempInput);
            }
        });
    </script>

